{
  "version": 2,
  "title": "11ty Serverless Madlibs",
  "description": "",
  "technologies": [{
    "id": "netlify",
    "name": "Netlify",
    "url": "https://www.netlify.com/"
  }],
  "deployment": {
    "provider": "netlify",
    "sites": [
      {
        "id": "studio",
        "type": "studio",
        "title": "Madlibs Studio",
        "description": "The Sanity Studio is where you edit and structure your content.",
        "dir": "./studio",
        "buildSettings": {
          "base": "./studio",
          "dir": "dist",
          "cmd": "npm run build && cp netlify.toml dist"
        }
      },
      {
        "id": "web",
        "type": "web",
        "title": "11ty Madlibs",
        "description": "The 11ty front-end that uses markdown and Sanity blog posts",
        "dir": "./web",
        "buildSettings": {
          "base": "./site",
          "dir": "_site",
          "cmd": "npm run build"
        },
        "requiredTokens": [
          {
            "label": "madlibCreateToken",
            "role": "write"
          }
        ]

      }
    ]
  }
}